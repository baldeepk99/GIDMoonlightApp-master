
@model Businesses
@{ ViewData["Title"] = "Business Services";
    Layout = "_Layout"; }
<br />

<div class="white-block">
    <div class="row">
        <div class="col-lg-12">
            <p>Our services</p>
            <hr class="bg-warning" />
            <div class="overflow-auto p-2 flex-fill bd-highlight" style="max-width: 100%; max-height: 500px;">
            
                <table class="table table-hover table-responsive" width="100%">
                    <thead class="thead-dark">
                        <tr>
                            <th>Job Name</th>
                            <th>Job Type</th>
                            <th>Description</th>
                            <th>Booking Fee</th>
                            <th>Service Charge</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var job in Model.Jobs)
                            {
                        <tr>
                            <td>@job.JobName</td>
                            <td>@job.JobType</td>
                            <td>@job.Description</td>
                            <td>@job.BookingFee</td>
                            <td>@job.ServiceCharge</td>
                            <td>
                                <a class="btn btn-outline-warning btn-sm" asp-controller="Business" asp-action="Edit"
                                   asp-route-id="@job.JobId">Edit</a>
                            </td>
                            <td>
                                <a class="btn btn-outline-danger btn-sm" asp-controller="Business" asp-action="Delete"
                                   asp-route-id="@job.JobId">Delete</a>
                            </td>
                        </tr>
                            }
                        }

                    </tbody>
                   
                </table>
            </div>
        </div>
      
    </div>
</div>



