
@model MoonlightGID.Models.Jobs
@{ ViewData["Title"] = "Create Job";
    Layout = "_Layout"; }
<br />
<br />
<div class="white-block">
    <div class="row">
        <div class="col-10 mb-2 ">
            <p>Add New Service</p>
            <hr />
            <div style="padding:20px;">
                <form asp-action="AddService" asp-controller="Business">
                    <input asp-for="@Model.CompanyId" type="hidden" value="@Model.CompanyId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <label class="col-sm-4">Job Name</label>
                        <div class="col-sm-6">
                            <input asp-for="@Model.JobName" class="form-control " placeholder="Job Name" required />
                            <span asp-validation-for="@Model.JobName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4">Job Type</label>
                        <div class="col-sm-6">
                            <input asp-for="@Model.JobType" class="form-control " placeholder="Job Type" required />
                            <span asp-validation-for="@Model.JobType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4">Job Description</label>
                        <div class="col-sm-6">
                            <input asp-for="@Model.Description" class="form-control " placeholder="Job Description" required />
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4">Booking Charge</label>
                        <div class="col-sm-6">
                            <input asp-for="@Model.BookingFee" class="form-control " placeholder="Booking Charge" required />
                            <span asp-validation-for="@Model.BookingFee" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4">Service Charge</label>
                        <div class="col-sm-6">
                            <input asp-for="@Model.ServiceCharge" class="form-control " placeholder="Service Charge" required />
                            <span asp-validation-for="@Model.ServiceCharge" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group">
                        <input a asp-action="AddService" asp-controller="Business" type="submit" value="Update Service" class="btn btn-warning" />

                    </div>
                </form>
            </div>

        </div>
    </div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


