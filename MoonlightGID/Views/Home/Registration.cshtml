@model MoonlightGID.Models.Customers

@{
    ViewData["Title"] = "Registration";
    Layout = "_Layout";
}

<div class="white-block">
    <h5 class="text-center">Register as Customer</h5>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Registration" asp-controller="Home">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <input asp-for="@Model.FirstName" class="form-control col-sm-3" placeholder="First Name" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    <span class="col-sm-1"></span>

                    <input asp-for="@Model.LastName" class="form-control col-sm-3" placeholder="Last Name" required />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    <span class="col-sm-1"></span>

                    <input asp-for="@Model.Email" class="form-control col-sm-3" placeholder="Email Address" required />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>

                </div>

                <div class="form-group row">
                    <input asp-for="@Model.ContactNumber" class="form-control col-sm-3" placeholder="Contact Number" />
                    <span asp-validation-for="@Model.ContactNumber" class="text-danger"></span>
                    <span class="col-sm-1"></span>

                    <input asp-for="@Model.UserLogin" class="form-control col-sm-3" placeholder="Username" required />
                    <span asp-validation-for="@Model.UserLogin" class="text-danger"></span>
                    <span class="col-sm-1"></span>

                    <input asp-for="@Model.Password" type="password" class="form-control col-sm-3" placeholder="Password" required />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>

                </div>
                <div class="form-group row">

                    <input asp-for="@Model.Address" class="form-control col-sm-3" placeholder="Address" required />
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    <span class="col-sm-1"></span>

                    <input asp-for="@Model.City" class="form-control col-sm-3" placeholder="City" required />
                    <span asp-validation-for="@Model.City" class="text-danger"></span>
                    <span class="col-sm-1"></span>
                    <input asp-for="@Model.PostalCode" class="form-control col-sm-3" placeholder="Postal Code" required />
                    <span asp-validation-for="@Model.PostalCode" class=" text-danger"></span>

                </div>

                <div class="form-group row">

                    <input asp-for="@Model.Province" class="form-control col-sm-3" placeholder="Province" required />
                    <span asp-validation-for="@Model.Province" class="text-danger"></span>
                    <span class="col-sm-1 "></span>
                    <label class="col-sm-3 text-right">Birth Date</label>
                    <span class="col-sm-1 "></span>
                    <input asp-for="@Model.BirthDate" class="form-control col-sm-3" placeholder="Birthday" />
                    <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>

                </div>
                


                <div class="form-group">
                    <input a asp-action="Registration" asp-controller="Home" type="submit" value="Create" class="btn btn-warning" />

                </div>
            </form>
        </div>
    </div>

    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
